.row
  .span8
    %h1 Listing stories

    %table
      %tr
        %th Title
        %th Status
        %th Assigned to
        %th
        %th
        %th

      - @stories.each do |story|
        %tr
          %td= story.title
          %td= story.status
          %td= story.assigned_to
          %td= link_to 'Show', story
          %td= link_to 'Edit', edit_story_path(story)
          %td= link_to 'Destroy', story, :method => :delete, :data => { :confirm => 'Are you sure?' }

    %br

    = link_to 'New Story', new_story_path

  .span4
    %h4
      Filter By:

    = form_tag(stories_path, :method => 'get') do
      .field
        = select_tag('status', options_for_select(Story::STATUSES, params[:status]), :include_blank => true)
      .field
        = select_tag('assigned_to', options_from_collection_for_select(User.all, :id, :email, params[:assigned_to]),
         :include_blank => true)
      .field
        = submit_tag('Filter', :class => 'btn btn-primary')
