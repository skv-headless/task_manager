<!DOCTYPE html>
<html>
<head>
  <title>TaskManager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
    <%= current_user.email %>
    |
    <%= link_to 'Exit', sessions_destroy_path %>
<% else %>
    <%= link_to 'Login', sessions_new_path %>
    <%= link_to 'Registration', new_user_path %>
<% end %>

<%= yield %>

</body>
</html>
